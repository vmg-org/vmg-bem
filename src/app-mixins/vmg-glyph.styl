// soc or null (base font)

@font-face
  font-family: Glyphicons Halflings
  src: url($glyph-font-path + 'glyphicons-halflings-regular.eot')
  src: url($glyph-font-path + 'glyphicons-halflings-regular.eot?#iefix') format('embedded-opentype'), url($glyph-font-path + 'glyphicons-halflings-regular.woff') format('woff'), url($glyph-font-path + 'glyphicons-halflings-regular.ttf') format('truetype'), url($glyph-font-path + 'glyphicons-halflings-regular.svg#glyphicons_halflingsregular') format('svg')

@font-face
  font-family: socicon;
  src: url($glyph-font-path + 'socicon-webfont.eot');
  src: url($glyph-font-path + 'socicon-webfont.eot?#iefix') format('embedded-opentype'),
       url($glyph-font-path + 'socicon-webfont.woff') format('woff'),
       url($glyph-font-path + 'socicon-webfont.ttf') format('truetype'),
       url($glyph-font-path + 'socicon-webfont.svg#sociconregular') format('svg');
  font-weight: normal;
  font-style: normal;

vmg-glyph($prv-type = null)
  position: relative;
  top: 1px;
  display: inline-block;
  font-family: Glyphicons Halflings;
  font-style: normal;
  font-weight: normal;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  if $prv-type == 'soc'
    font-family: socicon
  else
    font-family: Glyphicons Halflings