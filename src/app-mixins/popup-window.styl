popup-back()
  width: 100%;
  min-height: 100%;
  background-color: rgba(0,0,0,0.5);
  overflow: hidden;
  position: fixed;
  top: 0px;
  z-index: $index-popup;

popup-space($popup-width)
  margin: 40px auto 0px auto;
  width: $popup-width;
  padding: 10px;
  background-color: #ececec;
  border-radius: 2px;
  box-shadow: 0px 0px 10px #444;
  position: relative

popup-close()
  font-size: 1.3rem
  position: absolute
  top: 10px
  right: 10px
  cursor: pointer
  color: $link-color
  &:hover
    color: $link-color-hover