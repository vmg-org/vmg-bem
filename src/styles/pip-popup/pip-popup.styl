$pip-popup-top-margin = 40px;
$pip-popup-width      = 80%;

.pip-popup
  width: 100%;
  min-height: 100%;
  background-color: rgba(0,0,0,0.5);
  overflow: hidden;
  position: fixed;
  top: 0px;
  z-index: $index-popup;

/* width and height of this block - by content size */
.pip-popup__space
  margin: $pip-popup-top-margin auto 0px auto;
  width: $pip-popup-width;
  padding: 10px;
  background-color: #c5c5c5;
  border-radius: 5px;
  box-shadow: 0px 0px 10px #000;
