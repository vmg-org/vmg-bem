@import '../../global'

.site-header
  container-fixed()

  @media (min-width $screen-sm-min)
    width $container-sm
  @media (min-width $screen-md-min)
    width $container-md
  @media (min-width $screen-lg-min)
    width $container-lg

.site-header__row
  make-row()

.site-header__call-logo-wrap
  clearfix()

.site-header__call-wrap
  float: left

.site-header__logo-wrap
  float: left

.site-header__auth-wrap
  clearfix()

.site-header__auth-no-wrap
  float: right