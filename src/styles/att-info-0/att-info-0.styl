// States of this block: 
// 0 not-rated
// 1 rated-bad
// 2 rated-good
// 3 not-best
// 4 best
// box-shadow-color may change too different of type of a block
.att-info-0
  padding: 8px 2px
  box-shadow:  aliceblue 5px 5px 6px
  
// img
.att-info-0__preview
  width: 100px
  cursor: pointer
  border: 1px solid #cecece
  &:hover
    border: 1px solid #aaa  

// if a rating exists
.att-info-0__moder-rating
  margin-left: 4px
  color: #888
  font-size: 1.2rem
 
// if no rating 
// after clicking - buttons is disapear - status is apear and image - to green/red - rebuild whole block
.att-info-0__fnc-good
  button-schema()
  button-variant($btn-primary-color, $btn-primary-bg, $btn-primary-border)

.att-info-0__fnc-bad
  button-schema()
  button-variant($btn-primary-color, $btn-primary-bg, $btn-primary-border)

