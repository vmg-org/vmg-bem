.auth-login
  padding: 0

.auth-login__auth-button
  padding: 4px
  color: white
  border-radius: 2px

.auth-login__auth-button_social_fb
  display: none
  background: linear-gradient(blue, black)
  &:hover
    background: linear-gradient(lighten(blue, 10%), gray)

.auth-login__auth-button_social_goog
  display: none
  background: linear-gradient(red, black)
  &:hover
    background: linear-gradient(lighten(red, 10%), gray)
  
.auth-login__auth-button_social_dev
  display: none
  background: linear-gradient(gray, black)
  &:hover
    background: linear-gradient(lighten(black, 10%), gray)
